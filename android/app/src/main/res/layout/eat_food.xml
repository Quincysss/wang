<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/e1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ef1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="foodname: " />
    <TextView
        android:id = "@+id/store_name"
        android:layout_width="fill_parent"
        android:layout_toRightOf = "@+id/ef1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"/>
    </LinearLayout>>
    <LinearLayout
        android:id="@+id/e2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <TextView
            android:id = "@+id/ef2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "caloricAmount: "/>
        <TextView
            android:id = "@+id/store_calorie"
            android:layout_width="fill_parent"
            android:layout_toRightOf = "@+id/ef2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>>
    <LinearLayout
        android:id="@+id/e3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">
        <TextView
            android:id = "@+id/ef3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "fat: "/>
        <TextView
            android:id = "@+id/store_fat"
            android:layout_width="fill_parent"
            android:layout_toRightOf = "@+id/ef3"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>>
    <LinearLayout
        android:id="@+id/e4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="horizontal">
        <TextView
            android:id = "@+id/ef4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "servingAmount: "/>
        <TextView
            android:id = "@+id/store_Amount"
            android:layout_width="fill_parent"
            android:layout_toRightOf = "@+id/ef4"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/e5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="horizontal">
        <TextView
            android:id = "@+id/ef5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "servingUnit: "/>
        <TextView
            android:id = "@+id/store_unit"
            android:layout_width="fill_parent"
            android:layout_toRightOf = "@+id/ef5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/e11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="horizontal">
        <TextView
            android:id = "@+id/ef11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "eat number: "/>
        <EditText
            android:id="@+id/number"
            android:layout_width="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="please enter the number"/>
    </LinearLayout>>
    <TextView
        android:id="@+id/eat_message"
        android:layout_below="@+id/e11"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <Button
        android:id = "@+id/submit_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/eat_message"
        android:layout_marginLeft="90dp"
        android:text = "submit"/>
</RelativeLayout>