<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">
    <LinearLayout
        android:id="@+id/c1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/calorie_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "goal"/>
        <TextView
            android:id="@+id/calorie_goal"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_toRightOf = "@+id/calorie_t1"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/c2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c1"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/calorie_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "total step"/>
        <TextView
            android:id="@+id/calorie_step"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_toRightOf = "@+id/calorie_t2"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>>
    <LinearLayout
        android:id="@+id/c3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c2"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/calorie_t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "total consumed"/>
        <TextView
            android:id="@+id/calorie_consumed"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_toRightOf = "@+id/calorie_t3"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>>
    <LinearLayout
        android:id="@+id/c4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/c3"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/calorie_t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "total burned"/>
        <TextView
            android:id="@+id/calorie_burned"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_toRightOf = "@+id/calorie_t4"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>>
</RelativeLayout>